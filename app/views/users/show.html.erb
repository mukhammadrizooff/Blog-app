<%= render 'user_card', user: @user %>
<%= content_tag(:div, tag.p(@user.bio), class: 'card__box') %>
<div class="group__box">
  <%= render partial: 'posts/post_card', collection: @user.most_recent_posts, as: :post, locals: { detailed: false } %>
</div>
<%= link_to 'See all posts', user_posts_path(@user.id), class: 'btn' %>