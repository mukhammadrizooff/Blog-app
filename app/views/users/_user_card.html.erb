<div class="card__box">
  <%= content_tag(:div, tag.img(src: user.photo, alt: "#{user.name}'s photo"), class: 'card__image') %>
  <div class="card__info">
    <%= tag.h1(user.name, class: 'card__title') %>
    <p class="card__counters">Number of posts: <%= tag.span(user.postsCounter) %></p>
  </div>
  <%= link_to 'Link to user', user_path(user.id) %>
</div>